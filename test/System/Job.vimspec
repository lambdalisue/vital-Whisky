        let job = Job.start(Args('echo.py', '--newline', "\r", '--out', 'stdout', '--without-trailing-newline'), extend(options, {
              \ 'on_stdout': { v -> add(rs, v) },
              \}))
        Assert Equals(job.wait(TIMEOUT), 0)
        Assert Equals(rs, [
              \ ['Hello'],
              \ [' World'],
              \ ["\r"],
              \ ['Hello'],
              \ [' World'],
